<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChequeResults" >

    <TextView
        android:id="@+id/lbl_chequedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Cheque Date"
        android:textColor="@color/EMC_blue"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_chequedate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:inputType="date"
        app:foundryTypeface="Cantarell-Regular"
        />

    <TextView
        android:id="@+id/lbl_ChequeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheque Number"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/EMC_blue"
        app:foundryTypeface="Quicksand-Regular"
       />

    <EditText
        android:id="@+id/txt_ChequeNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:inputType="number"
        app:foundryTypeface="Cantarell-Regular"/>

    <TextView
        android:id="@+id/lbl_BranchCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch Code"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/EMC_blue"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_BranchCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:inputType="number"
        app:foundryTypeface="Cantarell-Regular"/>


    <TextView
        android:id="@+id/lbl_ChequeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Cheque Amount"
        android:textColor="@color/EMC_blue"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_AccountNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:inputType="number"
        app:foundryTypeface="Cantarell-Regular"/>

    <TextView
        android:id="@+id/lbl_AccountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Account Number"
        android:textColor="@color/EMC_blue"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_ChequeAmount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:inputType="numberDecimal"
        app:foundryTypeface="Cantarell-Regular"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_Cheque_Accept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/EMC_blue"
            android:text="Accept"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular"/>

        <Button
            android:id="@+id/btn_Cheque_Cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:background="@color/EMC_blue"
            android:text="Cancel"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular"

            />
    </LinearLayout>





</LinearLayout>
