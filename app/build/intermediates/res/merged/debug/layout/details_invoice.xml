<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/proof_id_details_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/txt_Invoice_Amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:textSize="18sp"
        android:textColor="@color/ing_background"
        app:foundryTypeface="Cantarell-Regular"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txt_Invoice_Date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:textSize="18sp"
        android:textColor="@color/ing_background"
        android:inputType="textPersonName|date"
        app:foundryTypeface="Cantarell-Regular">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txt_Invoice_Number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/back_prompt"
        android:textColor="@color/ing_background"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Invoice_Number"
        android:layout_below="@+id/txt_Invoice_Number"
        android:text="Invoice Date"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        android:paddingTop="20dp"
        app:foundryTypeface="Quicksand-Regular"
        />

    <TextView
        android:id="@+id/back_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Invoice_Number"
        android:layout_alignParentTop="true"
        android:text="Invoice Number"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        android:paddingTop="20dp"
        app:foundryTypeface="Quicksand-Regular"
        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Invoice_Date"
        android:text="Invoice Amount"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        android:paddingTop="20dp"
        app:foundryTypeface="Quicksand-Regular" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt_Invoice_Amount">

        <Button
            android:id="@+id/btn_proof_id_accept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/ing_background"
            android:text="Accept"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular"/>

        <Button
            android:id="@+id/btn_proof_id_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:background="@color/ing_background"
            android:text="Cancel"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular"

            />
    </LinearLayout>


</RelativeLayout><!-- From: file:/Users/guinnj/Downloads/CaptivaMobileSDK2.0.0%202/Android/EMCMobileBankingxCP/app/src/main/res/layout/details_invoice.xml -->