<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddBackOfCheque"
    android:gravity="center|fill">

    <TextView
        android:id="@+id/documents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:text="Add Back Of Cheque?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/EMC_blue"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_take_back_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/documents"
        android:layout_marginTop="83dp"
        android:background="@color/EMC_blue"
        android:onClick="onAddBack"
        android:text="YES"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/documents"
        android:layout_alignEnd="@+id/documents" />

    <Button
        android:id="@+id/btn_no_back_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_take_back_picture"
        android:layout_alignRight="@+id/btn_take_back_picture"
        android:layout_below="@+id/btn_take_back_picture"
        android:layout_marginTop="59dp"
        android:background="@color/EMC_blue"
        android:onClick="onNoAddBack"
        android:text="NO"
        android:textColor="@color/white"
        android:textSize="60dp" />

</RelativeLayout><!-- From: file:/D:/xTools/AndroidStudio/Workspace/EMCMobileBankingxCP/app/src/main/res/layout/activity_add_back_of_cheque.xml -->