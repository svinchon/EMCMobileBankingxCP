<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BillResults" >

    <EditText
        android:id="@+id/txt_AmountDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_AmountDue"
        android:layout_below="@+id/lbl_AmountDue"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/lbl_CustomerAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_CustomerAccount"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="Customer Account"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue" />

    <TextView
        android:id="@+id/lbl_AmountPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_AmountDue"
        android:layout_below="@+id/txt_AmountDue"
        android:layout_marginTop="16dp"
        android:text="Amount Paid"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue" />

    <TextView
        android:id="@+id/lbl_CreditAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_CustomerAccount"
        android:layout_below="@+id/txt_CustomerAccount"
        android:layout_marginTop="15dp"
        android:text="Credit Account"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue" />

    <EditText
        android:id="@+id/txt_CreditAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_CreditAccount"
        android:layout_below="@+id/lbl_CreditAccount"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txt_AmountPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_AmountPaid"
        android:layout_below="@+id/lbl_AmountPaid"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txt_CustomerAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_CustomerAccount"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <TextView
        android:id="@+id/lbl_Currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_AmountPaid"
        android:layout_below="@+id/txt_AmountPaid"
        android:text="Currency"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue" />

    <Button
        android:id="@+id/btn_BillAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@color/EMC_blue"
        android:text="Accept"
        android:textColor="@color/white"
        android:onClick="onAccept" />

    <TextView
        android:id="@+id/lbl_AmountDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_CreditAccount"
        android:layout_below="@+id/txt_CreditAccount"
        android:text="Amount Due"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue" />

    <EditText
        android:id="@+id/txt_Currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Currency"
        android:layout_centerHorizontal="true"
        android:ems="10" />

</RelativeLayout>
