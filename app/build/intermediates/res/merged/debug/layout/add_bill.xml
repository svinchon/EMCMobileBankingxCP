<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    tools:context=".AddCheque"
    android:id="@+id/add_bill"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/layout_bill_reference">
    >
    <TextView
        android:id="@+id/lbl_BillReference"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Bill_Reference"
        android:textColor="@color/EMC_blue"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular"/>


    <EditText
        android:id="@+id/BillReference"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:singleLine="true"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_bill_value"
        android:layout_below="@id/layout_bill_reference"
        android:layout_marginTop="20dp">
    <!--TextView
        android:id="@+id/lbl_BillValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="@color/EMC_blue"
        android:text="@string/Bill_Value"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/BillValue"
        android:textSize="18sp"
        android:singleLine="true"
        /-->

    </LinearLayout>

    <include layout="@layout/add_proof_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/layout_bill_value"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:id="@+id/add_bill_media_buttons"/>



</RelativeLayout>



