<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ImageInfoActivity"
    android:background="@android:color/white" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/TopBar"
        android:background="#37474F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <ImageButton
		    android:id="@+id/BackButton"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:src="@drawable/i_left"
            android:background="#37474F"
	  	  	android:contentDescription="@string/General_NavPrev"
		  	android:onClick="onBackButton" />
	    <TextView
		    android:id="@+id/TopBarLabel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_centerInParent="true"
		    android:gravity="center"
            android:background="#37474F"
		    android:text="@string/ImageInfo_Title"
		    android:textColor="#FFFFFF"
		    android:textStyle="bold" />	    
	</RelativeLayout>    
    
    <TextView  
        android:id="@+id/DeviceIDLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black" 
        android:layout_below="@id/TopBar" />
    <TextView 
        android:id="@+id/ImageWidthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" 
        android:layout_below="@id/DeviceIDLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView 
        android:id="@+id/ImageHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" 
        android:layout_below="@id/ImageWidthLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView 
        android:id="@+id/ImageChannelsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" 
        android:layout_below="@id/ImageHeightLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView 
        android:id="@+id/ImageBitsPerPixelsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"         
        android:layout_below="@id/ImageChannelsLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView 
        android:id="@+id/VersionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" 
        android:layout_below="@id/ImageBitsPerPixelsLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
</RelativeLayout>
