<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <TextView
        android:id="@+id/lbl_CustomerAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Customer Account"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue"
        android:paddingTop="20dp"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_CustomerAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_CustomerAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular"/>

    <TextView
        android:id="@+id/lbl_CreditAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_CustomerAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Credit Account"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue"
        android:paddingTop="20dp"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_CreditAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lbl_CreditAccount"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lbl_AmountPaid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_AmountDue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Amount Paid"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue"
        android:paddingTop="20dp"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_AmountPaid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lbl_AmountPaid"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular"/>

    <TextView
        android:id="@+id/lbl_AmountDue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_CreditAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Amount Due"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue"
        android:paddingTop="20dp"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular"/>

    <EditText
        android:id="@+id/txt_AmountDue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_AmountDue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular"/>

    <TextView
        android:id="@+id/lbl_Currency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_AmountPaid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Currency"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/EMC_blue"
        android:paddingTop="20dp"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular"/>


    <EditText
        android:id="@+id/txt_Currency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lbl_Currency"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Currency"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_Bill_Accept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/EMC_blue"
            android:text="Accept"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular"/>

        <Button
            android:id="@+id/btn_Bill_Cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:background="@color/EMC_blue"
            android:text="Cancel"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular"

            />
    </LinearLayout>



</RelativeLayout>
