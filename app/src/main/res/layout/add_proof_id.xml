<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:id="@+id/add_proof_id"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/pid_camera_btn"
        android:textSize="15sp"
        android:drawableLeft="@drawable/i_camera"
        android:drawableStart="@drawable/i_camera"
        android:background="@color/ing_button"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:drawablePadding="0dp"
        android:textColor="@color/white"
        app:foundryTypeface="Quicksand-Regular"
        />
       />
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:id="@+id/pid_gallery_btn"
        android:drawableLeft="@drawable/i_gallery"
        android:drawableStart="@drawable/i_gallery"
        android:textSize="15sp"
        android:background="@color/ing_button"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:drawablePadding="0dp"
        android:textColor="@color/white"
        app:foundryTypeface="Quicksand-Regular"
        />

</LinearLayout>