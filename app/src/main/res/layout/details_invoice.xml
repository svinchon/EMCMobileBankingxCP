<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/proof_id_details_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txt_Invoice_Amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:inputType="numberDecimal"
        android:textColor="@color/ing_background"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular" />

    <EditText
        android:id="@+id/txt_Invoice_Date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:inputType="textPersonName|date"
        android:textColor="@color/ing_background"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txt_Invoice_Number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/back_prompt"
        android:inputType="text"
        android:textColor="@color/ing_background"
        android:textSize="18sp"
        app:foundryTypeface="Cantarell-Regular" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Invoice_Number"
        android:layout_below="@+id/txt_Invoice_Number"
        android:paddingTop="20dp"
        android:text="Date"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular" />

    <!--TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Invoice_Number"
        android:layout_below="@+id/txt_Invoice_Number"
        android:paddingTop="20dp"
        android:text="Invoice Date"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular" /-->

    <TextView
        android:id="@+id/back_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Invoice_Number"
        android:layout_alignParentTop="true"
        android:paddingTop="20dp"
        android:text="Invoice Number"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Invoice_Date"
        android:paddingTop="20dp"
        android:text="Amount"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular" />

    <!--TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Invoice_Date"
        android:paddingTop="20dp"
        android:text="Invoice Amount"
        android:textColor="@color/ing_background"
        android:textSize="20sp"
        app:foundryTypeface="Quicksand-Regular" /-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Invoice_Amount"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!--Button
            android:id="@+id/btn_proof_id_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@color/ing_background"
            android:text="Accept"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular" />

        <Button
            android:id="@+id/btn_proof_id_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@color/ing_background"
            android:text="Cancel"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular" /-->

        <Button
            android:id="@+id/btn_proof_id_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@color/ing_background"
            android:text="Start Over"
            android:textColor="@color/white"
            app:foundryTypeface="Quicksand-Regular" />

    </LinearLayout>

</RelativeLayout>